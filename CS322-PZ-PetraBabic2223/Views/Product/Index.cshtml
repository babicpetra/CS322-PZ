@model IEnumerable<CS322_PZ_PetraBabic2223.Models.Product>




<p>
    @if (ViewContext.HttpContext.User.IsInRole("Admin"))
    {
        @Html.ActionLink("Create New", "Create")
    }
   

</p>



@{
    ViewBag.Title = "Product";
    Layout = "~/Views/Shared/_mytemplate.cshtml";
}

<!-- Title Page -->
<section class="bg-title-page p-t-50 p-b-40 flex-col-c-m" style="background-image: url(@Url.Content("~/Content/mytemplate/")images/myImages/10.jpg);">
    <h2 class="l-text2 t-center">
        Women
    </h2>
    <p class="m-text13 t-center">
        New Arrivals Women Collection 2018
    </p>
</section>


<!-- Content page -->
<section class="bgwhite p-t-55 p-b-65">
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
                <div class="leftbar p-r-20 p-r-0-sm">
                    @Html.Partial("_partialCategories")
                  


                  
                </div>
            </div>

            <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
               
                

                <!-- Product -->
                <div class="row">
                    @foreach (var item in Model)
                    {
                <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                    <!-- Block2 -->
                    <div class="block2">
                        <div class="block2-img wrap-pic-w of-hidden pos-relative block2-labelnew">
                            <img src="@Url.Content("~/Content/mytemplate/")images/myImages/@Html.DisplayFor(modelItem => item.ImagePath)" alt="IMG-PRODUCT">

                            <div class="block2-overlay trans-0-4">
                                <a href="#" class="block2-btn-addwishlist hov-pointer trans-0-4">
                                    <i class="icon-wishlist icon_heart_alt" aria-hidden="true"></i>
                                    <i class="icon-wishlist icon_heart dis-none" aria-hidden="true"></i>
                                </a>

                                <div class="block2-btn-addcart w-size1 trans-0-4">
                                    <!-- Button -->

                                    @Html.ActionLink("Add to Cart", "OrderNow", "ShoppingCart",new {id = item.ProductId },
                                    new { @class = "flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4" })
                                                                         
                                    
                                </div>
                            </div>
                        </div>

                        <div class="block2-txt p-t-20">
                            <a href="product-detail.html" class="block2-name dis-block s-text3 p-b-5">
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </a>

                            <span class="block2-price m-text6 p-r-5">
                                @Html.DisplayFor(modelItem => item.Price)$
                            </span>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ProductId }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ProductId }) |
                            @if (ViewContext.HttpContext.User.IsInRole("Admin"))
                            {
                               @Html.ActionLink("Delete", "Delete", new { id = item.ProductId })
                            }

                        </div>
                    </div>
                </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>



 
